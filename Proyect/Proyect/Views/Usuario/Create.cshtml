@model Proyect.Models.User
<html>
<body>
    <form asp-controller="Usuario" asp-action="CreateUsuario" method="post" border="2">
        <div class="form-group">
            <label for="formGroupExampleInput">Id</label>
            <input asp-for="Id" class="form-control" id="formGroupExampleInput" placeholder="Id">
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Nombre</label>
            <input asp-for="Name" class="form-control" id="formGroupExampleInput2" placeholder="Nombre">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Usuario</label>
            <input asp-for="Username" class="form-control" id="formGroupExampleInput2" placeholder="Usuario">
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Contraseña</label>
            <input asp-for="Password" class="form-control" id="formGroupExampleInput2" placeholder="Contraseña">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div>
            <button type="submit" class="btn btn-primary" value="btn" name="Agregar" data-toggle="modal" data-target="#exampleModal">Agregar</button>
        </div>
    </form>
</body>
</html>
